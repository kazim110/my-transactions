<%= form_with(model: category, local: true, html: { class: 'category-form' }) do |form| %>
  <% if category.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'text-field' %>
  </div>

  <div class="form-field">
    <%= form.label :icon %>
    <%= form.file_field :icon, id: 'icon_upload', direct_upload: true, class: 'file-field' %>
  </div>

  <div class="form-field">
    <%= form.submit "Save", class: 'submit-btn' %>
  </div>
<% end %>