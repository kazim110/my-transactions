<div class="page-container-register">
  <div class="content-wrap-register">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="navigation-bar">
    <%= link_to image_tag('backarrow.png', alt: 'Back'), root_path, class: 'back-button' %>
      <h2 class="page-title"><strong>Register</strong></h2>
      <%=  f.submit 'Sign Up', class: "signup-btn" %>
    </div>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field-name">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name' %>
    </div>

    <div class="field-email">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
    </div>

    <div class="field-password">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password' %>
    </div>

    <div class="field-password">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Conformation' %>
    </div>
  <% end %>
  </div>
</div>
